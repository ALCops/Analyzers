<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net8.0</TargetFrameworks>
        <PackageId>ALCops.Analyzers</PackageId>
        <AssemblyName>ALCops.Analyzers</AssemblyName>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <DevelopmentDependency>true</DevelopmentDependency>
    </PropertyGroup>
    <ItemGroup>
        <ProjectReference Include="../ALCops.ApplicationCop/ALCops.ApplicationCop.csproj" PrivateAssets="all" />
        <ProjectReference Include="../ALCops.Common/ALCops.Common.csproj" PrivateAssets="all" />
    </ItemGroup>
        <ItemGroup>
        <None Include="$(OutputPath)netstandard2.1/ALCops.ApplicationCop.dll" Pack="true" PackagePath="lib/netstandard2.1" Visible="false" />
        <None Include="$(OutputPath)net8.0/ALCops.ApplicationCop.dll" Pack="true" PackagePath="lib/net8.0" Visible="false" />

        <None Include="$(OutputPath)netstandard2.1/ALCops.Common.dll" Pack="true" PackagePath="lib/netstandard2.1" Visible="false" />
        <None Include="$(OutputPath)net8.0/ALCops.Common.dll" Pack="true" PackagePath="lib/net8.0" Visible="false" />
    </ItemGroup>
</Project>